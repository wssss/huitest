<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.TestPlayerMapper">
    
    <resultMap type="TestPlayer" id="TestPlayerResult">
        <result property="name"    column="name"    />
        <result property="num"    column="num"    />
        <result property="id"    column="id"    />
        <result property="url"    column="url"    />
    </resultMap>

    <sql id="selectTestPlayerVo">
        select name, num, id, url, position from test_player
    </sql>

    <select id="selectTestPlayerList" parameterType="TestPlayer" resultMap="TestPlayerResult">
        <include refid="selectTestPlayerVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="num != null "> and num = #{num}</if>
            <if test="id != null "> and id = #{id}</if>
            <if test="url != null  and url != ''"> and url = #{url}</if>
            <if test="url != position  and position != ''"> and position = #{position}</if>
        </where>
    </select>
    
    <select id="selectTestPlayerById" parameterType="Long" resultMap="TestPlayerResult">
        <include refid="selectTestPlayerVo"/>
        where id = #{id}
    </select>
    <insert id="insertTestPlayer" parameterType="TestPlayer" useGeneratedKeys="true" keyProperty="id">
        insert into test_player
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">name,</if>
            <if test="num != null">num,</if>
            <if test="url != null and url != ''">url,</if>
            <if test="position != null and position != ''">#{position},</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">#{name},</if>
            <if test="num != null">#{num},</if>
            <if test="url != null and url != ''">#{url},</if>
            <if test="position != null and position != ''">#{position},</if>
         </trim>
    </insert>

    <update id="updateTestPlayer" parameterType="TestPlayer">
        update test_player
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="num != null">num = #{num},</if>
            <if test="url != null and url != ''">url = #{url},</if>
            <if test="position != null and position != ''">position = #{position}</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteTestPlayerById" parameterType="Long">
        delete from test_player where id = #{id}
    </delete>

    <delete id="deleteTestPlayerByIds" parameterType="String">
        delete from test_player where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>